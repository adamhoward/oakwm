      },
      {
        "align": "left",
        "image": "res/terminal.ppm",
        "interactive": "true",
        "name": "Terminal"
      },
      {
        "align": "right",
        "image": "res/power.ppm",
        "interactive": "true",
        "name": "Power"
      },
      {
        "align": "right",
        "image": "res/wrench.ppm",
