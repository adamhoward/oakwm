        "name": "Configuration"
      },
      {
        "align": "right",
        "image": "res/battery-full.ppm",
        "interactive": "false",
        "name": "Battery"
      },
      {
        "align": "right",
        "image": "res/volume-up.ppm",
        "interactive": "true",
        "name": "Volume"
      },
      {
        "align": "right",
        "image": "res/wifi.ppm",
        "interactive": "true",
        "name": "Network"
