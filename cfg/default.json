{
  "toolbar": {
    // NOTE: Order matters - icons aligned right are displayed backwards.
    "battery": {
      "battery": [
        { "name": "Battery", "path": "/sys/class/power_supply/BAT0/capacity" }
      ],
      "dc": [
        { "name": "AC", "path": "/sys/class/power_supply/AC/online" }
      ]
    },
    "colours": {
      "background": "FFFFFF",
      "foreground": "000000",
      "highlight": "0000FF"
    },
    "delay-usec": "50000",
    "font": "-*-lucida-medium-r-*-*-18-*-75-75-*-*-*-*",
    "height": "32",
    "icons" : [
      {
        "align": "left",
        "image": "res/plus.ppm",
        "interactive": "true",
        "menu": [
          {
            "command": "xterm -geometry 80x24+0+40 -e \"exec bash\" &",
            "text": "Terminal"
          },
          {
            "command": "dillo &",
            "text": "Browser"
          },
          {
            "command": "thunderbird &",
            "text": "Email & Chat"
          },
          {
            "command": "xterm -geometry 80x24+0+40 -e \"vim; exec bash\" &",
            "text": "Vim"
          }
        ],
        "name": "Open"
      },
      {
        "align": "left",
        "image": "res/display.ppm",
        "interactive": "true",
        "menu": [
          {
            "command": "xrandr -o right; killall oakwm-toolbar; ./oakwm-toolbar &",
            "text": "Rotate"
          },
          {
            "text": "Snap Display"
          }
        ],
        "name": "Display"
      },
      {
        "align": "left",
        "image": "res/front.ppm",
        "interactive": "true",
        "menu": [
        ],
        "name": "Windows"
      },
      {
        "align": "left",
        "image": "res/keyboard.ppm",
        "interactive": "true",
        "menu": [
          {
            "command": "matchbox-keyboard &",
            "text": "Open"
          },
          {
            "command": "killall matchbox-keyboard &",
            "text": "Close"
          }
        ],
        "name": "Keyboard"
      },
      {
        "align": "right",
        "image": "res/power.ppm",
        "interactive": "true",
        "menu": [
          {
            "command": "killall oakwm &",
            "text": "Log out"
          },
          {
            "command": "xterm -e \"sudo systemctl suspend\" &",
            "text": "Suspend"
          },
          {
            "command": "xterm -e \"sudo systemctl poweroff\" &",
            "text": "Power Off"
          }
        ],
        "name": "Power"
      },
      {
        "align": "right",
        "image": "res/wrench.ppm",
        "interactive": "true",
        "menu": [
          {
            "command": "xterm -geometry 80x24+0+40 -e \"sudo apt-get update; sudo apt-get upgrade\" &",
            "text": "Update"
          },
          {
            "command": "xterm -geometry 80x24+0+40 -e \"sudo apt-get autoremove; sudo apt-get autoclean\" &",
            "text": "Clean"
          }
        ],
        "name": "Configuration"
      },
      {
        "align": "right",
        "image": "res/battery-full.ppm",
        "interactive": "false",
        "menu": [
        ],
        "name": "Battery"
      },
      {
        "align": "right",
        "image": "res/volume-up.ppm",
        "interactive": "true",
        "menu": [
          {
            "command": "gnome-alsamixer &",
            "text": "Settings"
          }
        ],
        "name": "Volume"
      },
      {
        "align": "right",
        "image": "res/wifi.ppm",
        "interactive": "true",
        "menu": [
          {
            "command": "nm-connection-editor &",
            "text": "Settings"
          }
        ],
        "name": "Network"
      }
    ],
    "menu": {
      "max-items": "16",
      "max-width": "128"
    },
    "modifiers": [
      { "name": "active", "mask": "00FFFF" },
      { "name": "focus",  "mask": "0000FF" }
    ]
  }
}
