{
  "toolbar": {
    // NOTE: Order matters - icons aligned right are displayed backwards.
    "battery": {
      "battery": [
        { "name": "Battery", "path": "/sys/class/power_supply/BAT0/capacity" }
      ],
      "dc": [
        { "name": "AC", "path": "/sys/class/power_supply/AC/online" }
      ]
    },
    "colours": {
      "background": "FFFFFF",
      "foreground": "000000"
    },
    "delay-usec": "50000",
    "font": "-*-lucida-medium-r-*-*-18-*-75-75-*-*-*-*",
    "height": "32",
    "icons" : [
      {
        "align": "left",
        "image": "res/plus.ppm",
        "interactive": "true",
        "menu": [
        ],
        "name": "Open"
      },
      {
        "align": "left",
        "image": "res/terminal.ppm",
        "interactive": "true",
        "menu": [
        ],
        "name": "Terminal"
      },
      {
        "align": "right",
        "image": "res/power.ppm",
        "interactive": "true",
        "menu": [
          {
            "command": "xterm -e \"echo log_out; sleep 5\" &",
            "text": "Log out"
          },
          {
            "command": "xterm -e \"echo suspend; sleep 5\" &",
            "text": "Suspend"
          },
          {
            "command": "xterm -e \"echo poweroff; sleep 5\" &",
            "text": "Power Off"
          }
        ],
        "name": "Power"
      },
      {
        "align": "right",
        "image": "res/wrench.ppm",
        "interactive": "true",
        "menu": [
        ],
        "name": "Configuration"
      },
      {
        "align": "right",
        "image": "res/battery-full.ppm",
        "interactive": "false",
        "menu": [
        ],
        "name": "Battery"
      },
      {
        "align": "right",
        "image": "res/volume-up.ppm",
        "interactive": "true",
        "menu": [
        ],
        "name": "Volume"
      },
      {
        "align": "right",
        "image": "res/wifi.ppm",
        "interactive": "true",
        "menu": [
        ],
        "name": "Network"
      }
    ],
    "menu": {
      "max-items": "16"
    },
    "modifiers": [
      { "name": "active", "mask": "00FFFF" },
      { "name": "focus",  "mask": "0000FF" }
    ]
  }
}
