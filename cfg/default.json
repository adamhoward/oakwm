{
  "toolbar": {
    // NOTE: Order matters - icons aligned right are displayed backwards.
    "colours": {
      "background": "FFFFFF",
      "foreground": "000000"
    },
    "delay-usec": "50000",
    "font": "-*-lucida-medium-r-*-*-18-*-75-75-*-*-*-*",
    "height": "32",
    "icons" : [
      { "align": "left",  "image": "res/plus.ppm",         "interactive": "true"  },
      { "align": "left",  "image": "res/terminal.ppm",     "interactive": "true"  },
      { "align": "right", "image": "res/power.ppm",        "interactive": "true"  },
      { "align": "right", "image": "res/wrench.ppm",       "interactive": "true"  },
      { "align": "right", "image": "res/battery-full.ppm", "interactive": "false" },
      { "align": "right", "image": "res/volume-up.ppm",    "interactive": "true"  },
      { "align": "right", "image": "res/wifi.ppm",         "interactive": "true"  }
    ],
    "modifiers": [
      { "name": "active", "mask": "00FFFF" },
      { "name": "focus",  "mask": "0000FF" }
    ]
  }
}
